<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.serega.wildroom1.MainActivity"
    android:focusableInTouchMode="false"
    android:isScrollContainer="false"
    android:nestedScrollingEnabled="true"
    android:background="#fcfefe"
    android:backgroundTint="#03db3434"
    android:foregroundGravity="center_vertical"
    android:gravity="center_vertical"
    android:scrollIndicators="right">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEND"
        android:id="@+id/send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/input"
        android:layout_alignBottom="@+id/send"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/send"
        android:layout_toLeftOf="@+id/send"
        android:layout_toStartOf="@+id/send" />

    <TextView
        android:isScrollContainer="false"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/send"
        android:layout_alignRight="@+id/send"
        android:layout_alignEnd="@+id/send"
        android:autoText="true"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:linksClickable="true"
        android:nestedScrollingEnabled="true"
        android:textIsSelectable="true"
        android:contextClickable="true"
        android:longClickable="true"
        android:layout_below="@+id/_user"
        android:textSize="14dp"
        android:scrollIndicators="right"
        android:gravity="bottom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/_user"
        android:text="user name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/drop"
        android:layout_toStartOf="@+id/drop" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DROP"
        android:id="@+id/drop"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/_user" />
</RelativeLayout>
